{
  "name": "pageobject",
  "private": true,
  "scripts": {
    "clean": "./scripts/clean.sh",
    "precommit": "lint-staged",
    "commit": "commit",
    "commitmsg": "commitlint --edit",
    "precompile": "lerna exec -- rm -rf lib/",
    "compile": "lerna exec -- tsc --project .",
    "postcompile": "lerna exec -- rm -rf lib/__mocks__/ && rm -rf lib/__tests__/",
    "format": "./scripts/prettier.sh --write",
    "format:test": "./scripts/prettier.sh --list-different",
    "postinstall": "./scripts/copy.sh && lerna bootstrap",
    "lint": "node scripts/markdownlint.js && lerna exec -- ../../scripts/lerna/tslint.sh",
    "release": "./scripts/release.sh",
    "pretest": "npm run compile",
    "test": "npm run format:test && npm run lint && jest --no-cache",
    "upgrade": "ncu -ua && lerna exec -- ncu -ua",
    "watch": "run-p watch:compile \"watch:test -- {@}\" --",
    "watch:compile": "lerna exec --parallel --concurrency 99 -- tsc --project . --watch",
    "watch:test": "jest --watchAll"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.1.1",
    "@commitlint/config-angular": "^5.1.1",
    "@commitlint/config-lerna-scopes": "^5.1.1",
    "@commitlint/prompt-cli": "^5.1.2",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.53",
    "chromedriver": "^2.33.2",
    "coveralls": "^3.0.0",
    "custom-tslint-formatters": "^2.1.1",
    "git-latest-semver-tag": "^1.0.2",
    "globby": "^7.1.1",
    "husky": "^0.14.3",
    "jest": "^22.0.0",
    "lerna": "^2.5.1",
    "lint-staged": "^5.0.0",
    "markdownlint": "^0.6.4",
    "npm-check-updates": "^2.13.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.2",
    "ts-config": "^15.0.0",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/@pageobject/*/src/**/*.{ts,tsx}",
      "!**/@pageobject/*/src/**/*.test.{ts,tsx}",
      "!**/@pageobject/class/src/AdapterTestSuite.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "<rootDir>/@pageobject/*/src/**/*.test.{ts,tsx}"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": true,
    "silent": false,
    "bail": false
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --single-quote --no-bracket-spacing --parser typescript --write",
      "git add"
    ],
    "*.{js,jsx,json}": [
      "prettier --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  }
}
