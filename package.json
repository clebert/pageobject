{
  "name": "pageobject",
  "private": true,
  "scripts": {
    "clean": "./scripts/clean.sh",
    "commit": "commit",
    "commitmsg": "commitlint --edit",
    "compile": "lerna exec -- tsc --project .",
    "format": "prettier --write '**/*.{js,json,jsx,ts,tsx}'",
    "format:test": "prettier --list-different '**/*.{js,json,jsx,ts,tsx}'",
    "postinstall": "webdriver-manager update",
    "lint": "node scripts/markdownlint.js && lerna exec -- ../../scripts/tslint.sh",
    "prerelease": "yarn run clean && yarn install && yarn test",
    "release": "lerna publish --conventional-commits",
    "postrelease": "git push --follow-tags origin master",
    "pretest": "yarn run compile",
    "test": "yarn run format:test && yarn run lint && jest --no-cache --verbose && lerna run test",
    "posttest": "node docs/examples/getting-started.js && node docs/examples/todo-mvc/index.js && ./scripts/typedoc.sh",
    "prewatch": "yarn run compile",
    "watch": "run-p watch:compile \"watch:test -- {@}\" --",
    "watch:compile": "lerna exec --parallel --concurrency 99 -- tsc --project . --watch",
    "watch:test": "jest --watchAll"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@commitlint/config-lerna-scopes": "^6.1.3",
    "@commitlint/prompt-cli": "^6.1.3",
    "@types/jest": "^22.1.4",
    "@types/node": "^9.4.6",
    "coveralls": "^3.0.0",
    "custom-tslint-formatters": "^2.3.0",
    "globby": "^8.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "markdownlint": "^0.7.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "replace-in-file": "^3.1.1",
    "ts-config": "^17.0.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.0",
    "typescript": "^2.7.2"
  },
  "workspaces": [
    "@pageobject/*"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/@pageobject/*/src/**/*.{ts,tsx}",
      "!**/@pageobject/*/src/**/*.test.{ts,tsx}",
      "!**/@pageobject/flexible/src/FlexibleAdapterTestSuite.ts",
      "!**/@pageobject/flexible-protractor/src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "<rootDir>/@pageobject/*/src/**/*.test.{ts,tsx}"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": false,
    "silent": false,
    "bail": false
  }
}
